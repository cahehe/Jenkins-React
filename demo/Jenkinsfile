pipeline{    
    agent{
        docker{
            image "node:17.3.0"
            args "-p 3000:3000"
        }
    }

    stages{        
        stage("install"){
            steps{
                sh "cd demo"
                sh """
                    npm install
                    """
            }
        }

        stage("start"){
            steps{                
                sh """
                    npm start
                """
            }
        }

    }
}